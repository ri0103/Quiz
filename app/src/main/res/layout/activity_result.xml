<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/caption_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="あなたの正解数は"
        android:textSize="32sp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/quiz_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="32sp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/caption_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/correct_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#18CE77"
        android:textSize="160sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/quiz_count_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/quiz_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="問"
        android:textSize="40sp"
        android:layout_marginTop="152dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/quiz_count_text"
        app:layout_constraintLeft_toRightOf="@id/correct_count_text"/>

    <Button
        android:id="@+id/again_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#1BCE77"
        android:textSize="24sp"
        android:text="もう一回"
        android:layout_marginBottom="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>